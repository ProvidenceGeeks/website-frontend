{
  "name": "website-frontend",
  "version": "0.3.0",
  "description": "UI frontend repository for the Providence Geeks website. Built with React and webpack.",
  "main": "./src/index.jsx",
  "scripts": {
    "clean": "rimraf ./build && rimraf ./reports",
    "build": "npm run clean && npm run lint && webpack --config ./webpack.config.prod.js",
    "develop": "webpack-dev-server --open --config ./webpack.config.develop.js",
    "lint": "eslint *.js ./src/**/**/*.spec.*",
    "release": "npm run clean && npm run lint && webpack --config ./webpack.config.release.js",
    "serve": "npm run build && http-server ./build -o --proxy http://stage.pvdgeeks.org",
    "test": "npm run clean && jest --config ./jest.config.json"
  },
  "repository": {
    "url": "https://github.com/ProvidenceGeeks/website-frontend.git",
    "type": "git"
  },
  "author": "pholyoke@kenzan.com",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^4.0.0-beta.2",
    "jquery": "^3.2.1",
    "moment": "^2.19.1",
    "postcss-loader": "^2.1.5",
    "react": "^16.0.0",
    "react-bootstrap": "^0.31.5",
    "react-dom": "^16.0.0",
    "react-lazyload": "^2.3.0",
    "react-router": "^3.0.0",
    "react-transition-group": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.10",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "eslint": "^4.18.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-react": "^7.4.0",
    "favicons-webpack-plugin": "^0.0.8",
    "file-loader": "^1.1.9",
    "html-critical-webpack-plugin": "^1.1.0",
    "html-webpack-plugin": "^3.1.0",
    "http-server": "^0.10.0",
    "jest": "^21.2.1",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.5.3",
    "optimize-css-assets-webpack-plugin": "^4.0.0",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-test-renderer": "^16.0.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
